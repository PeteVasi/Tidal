<UserControl x:Class="TidalLoader.LoadingScreen"
    xmlns="http://schemas.microsoft.com/client/2007" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="700" Height="500"
    Loaded="LoadingScreen_Loaded">
    <Canvas x:Name="LayoutRoot" Background="Black">
        <TextBlock x:Name="LoadingText" Canvas.Left="280" Canvas.Top="270" Foreground="White" FontSize="18" Text="Tidal is loading..." />
        <Rectangle x:Name="ProgressBorder" Canvas.Left="100" Canvas.Top="300" Width="500" Height="25" Stroke="White" RadiusX="10" RadiusY="10" />
        <Rectangle x:Name="ProgressBar" Canvas.Left="100" Canvas.Top="300" Width="20" Height="25" Stroke="White" Fill="Azure"  RadiusX="10" RadiusY="10"/>
    </Canvas>
</UserControl>
